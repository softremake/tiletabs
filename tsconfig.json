{
    "compilerOptions": {
        "outDir": "./lib/",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "removeComments": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "jsx": "react",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "alwaysShowRuleFailuresAsWarnings": false
            }
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "lib",
        "node_modules"
    ]
}
